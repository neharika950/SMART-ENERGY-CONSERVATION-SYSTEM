#define Relay_Pin 12      // Relay pin number
#define LDR_Pin 19        // LDR connected to analog pin A0
#define THRESHOLD 500     // Light level threshold for turning the relay on or off

void setup() {
  // Initialize relay pin as output
  pinMode(Relay_Pin, OUTPUT); 
  // Initialize serial communication
  Serial.begin(9600);
}

void loop() {
  // Read the LDR value (light level)
  int ldrValue = analogRead(LDR_Pin);
  
  // Print the LDR value to the Serial Monitor
  Serial.print("LDR Value: ");
  Serial.println(ldrValue);

  // Check if the LDR value is below the threshold (indicating dark)
  if (ldrValue > THRESHOLD) {
    // Light level is low, turn on the relay
    digitalWrite(Relay_Pin, HIGH);
    Serial.println("Relay ON");
  } else {
    // Light level is high, turn off the relay
    digitalWrite(Relay_Pin, LOW);
    Serial.println("Relay OFF");
  }

  // Wait for 2 seconds
  delay(2000);
}
