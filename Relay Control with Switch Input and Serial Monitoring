// Define pin numbers
const int pinSwitch = 37;  // Use a known working GPIO pin
const int pinRelay = 48;   // Use a known working GPIO pin

void setup() {
  Serial.begin(115200);     // Initialize serial communication
  pinMode(pinSwitch, INPUT_PULLUP);  // Switch input with pull-up resistor
  pinMode(pinRelay, OUTPUT);         // Relay output
  Serial.println("Setup completed.");
}

void loop() {
  int switchState = digitalRead(pinSwitch);
  Serial.print("Switch state: ");
  Serial.println(switchState);

  if (switchState == LOW) {           // Switch is pressed (active low)
    Serial.println("Relay ON");
    digitalWrite(pinRelay, HIGH);     // Set relay pin high
  } else {
    Serial.println("Relay OFF");
    digitalWrite(pinRelay, LOW);      // Set relay pin low
  }

  delay(100);  // Add a small delay to debounce the switch
}
